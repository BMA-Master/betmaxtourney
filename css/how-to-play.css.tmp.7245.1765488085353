}

.how-to-play-hero .hero-bg-image:nth-child(3) {
    background-image: url('https://images.unsplash.com/photo-1587280501635-68a0e82cd5ff?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
    animation-delay: 13.33s;
}

@keyframes backgroundSlide {
    0% {
        opacity: 1;
        transform: scale(1);
    }
    25% {
        opacity: 1;
        transform: scale(1.08);
    }
    30% {
        opacity: 1;
        transform: scale(1.1);
    }
    33.33% {
        opacity: 0;
        transform: scale(1.15);
    }
    100% {
        opacity: 0;
        transform: scale(1.15);
    }
}

