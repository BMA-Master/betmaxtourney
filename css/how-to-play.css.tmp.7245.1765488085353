    background-image: url('https://images.unsplash.com/photo-1461896836934-ffe607ba8211?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
    animation-delay: 0s;
}

.how-to-play-hero .hero-bg-image:nth-child(2) {
